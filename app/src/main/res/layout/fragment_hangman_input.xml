<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".activities.game.hangman.HangmanInputFragment">


    <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/wordLayout"
            app:flexWrap="wrap"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_gravity="bottom"
            app:justifyContent="center"
            android:layout_height="wrap_content"
            android:layout_weight="3">

    </com.google.android.flexbox.FlexboxLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/endLayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">

        <TextView
                android:text=""
                android:id="@+id/wordDescription"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hangman_description_background"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textAlignment="center">

        </TextView>

        <TextView
                android:id="@+id/againButton"
                android:text="@string/try_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hangman_again_background"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:elevation="8dp">

        </TextView>
    </LinearLayout>


    <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/keyboardLayout"
            app:flexWrap="wrap"
            android:animateLayoutChanges="true"
            android:layout_gravity="center_vertical"
            app:alignContent="center"
            app:justifyContent="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="3">

    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>